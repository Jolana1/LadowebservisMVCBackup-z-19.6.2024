@using LadowebservisMVC.Models
@model LadowebservisMVC.Controllers.Models.ContactModel_Sk





<div class="form-horizontal w3-text-white w3-center pt-4" id="">

    <div class="col-md-12 text-sm-center">
        <h2 class="section-heading text-uppercase">Kontaktujte nás</h2>
        <h3 class="section-subheading text-white">Máte otázku? Neváhajte nám napísať v tomto kontaktnom formulári!</h3>
    </div>
</div>
@using (Html.BeginForm("OdoslanieSpravy", "Home", FormMethod.Post, new { @class = "form-horizontal moj-formular" }))

    {
        @Html.ValidationSummary(true, "Udaje boli neúspešné. Prosím opravte chyby a skúste to znovu.")


                @Html.AntiForgeryToken()
                <div class="form-item">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Vaše meno" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>

                <div class="form-item">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Váš email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>



                @*<div class="form-item">
                    @Html.LabelFor(x => x.Subject)
                    @Html.PasswordFor(m => m.Subject, new { @class = "form-control", placeholder = "Predmet" })
                    @Html.ValidationMessageFor(m => m.Subject)
                    </div>*@
                <div class="form-item">
                    @Html.LabelFor(x => x.Phone)
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Váše telefónne číslo je potrebné pre rýchlejšiu komunikáciu" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>

                <div class="form-item">
                    @Html.LabelFor(x => x.Password)
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Vaše bezpečné heslo" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>


                <div class="form-item">
                    @Html.LabelFor(x => x.Text)
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder = "Vaša správa alebo zadajte text ak si chcete objednať tovar z Oriflamu v tvare č.str. ,kód,názov a cenu výrobku z akt.katalógu.Ďakujeme." })
                    @Html.ValidationMessageFor(m => m.Text)
                </div>

                @Html.ValidationSummary(true)
                <div class="form-section">
                    <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="btn btn-primary btn-lg tlacitko-moje">Odoslať</a>
                    <input type="submit" id="submitButton" class="hidden" />
                </div>
                }



























