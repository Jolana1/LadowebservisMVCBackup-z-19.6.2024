@{
    ViewBag.Title = "OdoslanieReg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 text-center" style="padding-top:2rem;padding-bottom:2rem;">
            <div class="well" style="background:transparent;border:none;">
                <div class="alert alert-success" role="alert" style="background:rgba(93,51,251,0.06);border-color:rgba(93,51,251,0.25);color:#fff;">
                    <h2 style="color:#ffffff;text-shadow:1px 1px 4px #5d33fb;margin-top:0;">Ďakujeme za registráciu</h2>
                    <p style="color:#ffffff;margin:0.5rem 0 0;">Vaša registrácia a správa boli úspešne odoslané.</p>
                    <p style="color:#ffffff;margin:0.5rem 0 0;">Your message has been sent successfully. Thank you for your registration.</p>
                </div>

                <div class="btn-group" role="group" aria-label="Akcie po registracii" style="margin-top:1rem;">
                    <a href="@Url.Action("Zdravie","Home")" class="btn btn-primary" role="button">Späť na úvod</a>
                    <a href="@Url.Action("MemberInfo","Home")" class="btn btn-default" role="button">Prejsť do členskej sekcie</a>
                </div>

                <p class="small" style="color:#ddd;margin-top:1rem;">Ak potrebujete pomoc, kontaktujte nás cez formulár alebo e‑mail.</p>
            </div>
        </div>
    </div>
</div>











